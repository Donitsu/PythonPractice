import sys

print "Input a number to see if it's odd or even"

n = int(sys.stdin.readline())

# simple logic to determine if number is divisible by 2.  Bonus to see if it's also divisible by 4
if n % 2 == 0:
	print "This number is even"
	if n % 2 == 0 and n % 4 ==0:
		print "this number is also divisible by 4"
	else:
		print "This number is not even"
else:
	print "This number is not even"

# logic to determine if a number is evenly divisible by another
print "enter two numbers to see if they're divisible"
print "enter first number to check"

j = int(sys.stdin.readline())

print "enter second number to divide the first by"

p = int(sys.stdin.readline())

if j % p == 0:
	print ("divide evenly into this")
else:
	print "these do not divide evenly into each other"
